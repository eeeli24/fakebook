-# Get rid of error messages as they break layout, and the form is pretty self-explanatory
- resource.errors.clear
.row
  .col.s8.offset-s2
    .card-panel
      .row
        %h4 Edit Profile
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          .input-field.col.s12
            = f.input :name, required: false
          .input-field.col.s12
            = f.input :age, required: false
          .input-field.col.s12
            = f.input :country_code, required: false, label: false,
              input_html: { class: 'browser-default' }
          .input-field.col.s12
            = f.input :current_password, label: "Current password. Required to confirm the changes", required: false
          .input-field.col.s12
            = f.button :submit, "Update"
      .row
        .col.s12
          %p= link_to "Back", :back, class: 'red-text'
