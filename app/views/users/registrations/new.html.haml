- content_for :stylesheets do
  html { height: 100%; }
  body { height: 100%; background-color: #66bb6a; }
  header { display: none }
  \.home { height: 100%; width: 100%; }

.container.home.valign-wrapper
  .container.valign
    .row
      .col.s12
        %h1.center-align#home_heading Fakebook
        %p.center-align#home_subheading A basic social network
    .row.signup.white
      .col.s12.z-depth-2
        .row
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            .row#errors
              .col.s10.offset-s1
                - flash.each do |msg_type, msg|
                  %div{ class: msg_type }= msg
            .row
              .input-field.col.s10.offset-s1
                = f.input :name, required: false
              .input-field.col.s10.offset-s1
                = f.input :email, required: false
              .input-field.col.s10.offset-s1
                = f.input :password, required: false, label: 'Password (6 characters minimum)'
              .input-field.col.s10.offset-s1
                = f.input :password_confirmation, required: false
              .input-field.col.s10.offset-s1.right-align
                = f.button :submit, "Sign up"
    .row.home_footer
      .col.s12.center-align
        %ul.footer-links
          %li= link_to 'Sign in', new_user_session_path, class: 'white-text'
          %li.white-text
            &#8226
          %li= link_to 'About', about_path, class: 'white-text'
